<div id="title-login">Sign Up</div>
<div id="signup_form">
  <%= form_for(:user, url: users_path, html: {class: "form-horizontal", role: "form"})  do |f|  %>
  <div class="form-group">
    <%= f.label :email, class: "col-sm-1 control-label sr-only"  %>
    <div class="col-sm-10">
      <%= f.email_field :email, class: "form-control", placeholder: "Enter Email", id: "create_email"%>
 	  </div>
  </div>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-1 control-label sr-only"  %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", placeholder: "Enter Name", id: "create_name"%>
 	  </div>
  </div>

 	<div class="form-group">
    <%= f.label :password, class: "col-sm-1 control-label sr-only" %>
    <div class="col-sm-10">
      <%= f.password_field :password, class: "form-control", placeholder: "Enter Password", id: "create_password"%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "col-sm-1 control-label sr-only" %>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password", id: "password_confirm"%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :type, class: "col-sm-1 control-label sr-only"  %>
    <div class="col-sm-10">
      <%= f.select(:type, [["Applicant", "Applicant"],["Recruiter","Recruiter"]], {}, class: "form-control") %>
    </div>
  </div>

  <div class="form-group" id="login_div" > 
    <%= f.submit "Create Account", class: "btn btn-default", id: "login_button" %>
    <div class="btn btn-default" id="show-login">Log In</div>
  </div>

<% end %> 







