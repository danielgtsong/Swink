<div id="title-login">Swink</div>
<%= form_for(:session, url: sessions_path, html: {class: "form-horizontal", role: "form"})  do |f|  %>
    <div class="form-group">
        <%= f.label :email, class: "col-sm-1 control-label sr-only"  %>
        <div class="col-sm-10">
            <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
 	    </div>
    </div>
 	<div class="form-group">
         <%= f.label :password, class: "col-sm-1 control-label sr-only" %>
        <div class="col-sm-10">
            <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
        </div>
    </div>
     <div class="form-group" id="login_div" > 
         <%= f.submit "Log In", class: "btn btn-default", id: "login_button" %>
          <div class="btn btn-default" id="show-sign-up">Sign Up</div>
     </div>
<% end %> 





